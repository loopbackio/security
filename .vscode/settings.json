{
    "json.schemas": [
        {
            "fileMatch": [
                "advisories/*/lbsec-*.csaf.json"
            ],
            "url": "https://docs.oasis-open.org/csaf/csaf/v2.0/csaf_json_schema.json"
        },
        {
